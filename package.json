{
	"name": "labonair-connectivity",
	"displayName": "Labonair Connectivity",
	"description": "Connectivity features for Labonair",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:labonair.views.hosts",
		"onView:labonair.views.queue"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "labonair",
					"title": "Connectivity",
					"icon": "$(server-process)"
				}
			]
		},
		"views": {
			"labonair": [
				{
					"id": "labonair.views.hosts",
					"name": "Host Manager",
					"type": "webview"
				},
				{
					"id": "labonair.views.queue",
					"name": "Transfer Queue",
					"type": "webview"
				}
			]
		},
		"commands": [
			{
				"command": "labonair.quickConnect",
				"title": "Quick Connect to Host",
				"category": "Labonair"
			},
			{
				"command": "labonair.openSFTP",
				"title": "Open SFTP File Manager",
				"category": "Labonair"
			},
			{
				"command": "labonair.backupAll",
				"title": "Export All Settings (Backup)",
				"category": "Labonair"
			},
			{
				"command": "labonair.resetLayout",
				"title": "Reset UI Layout",
				"category": "Labonair"
			}
		],
		"keybindings": [
			{
				"command": "labonair.refresh",
				"key": "f5",
				"when": "labonairFocus"
			},
			{
				"command": "labonair.copy",
				"key": "ctrl+c",
				"mac": "cmd+c",
				"when": "labonairFocus && !editorTextFocus"
			},
			{
				"command": "labonair.paste",
				"key": "ctrl+v",
				"mac": "cmd+v",
				"when": "labonairFocus && !editorTextFocus"
			}
		],
		"configuration": {
			"title": "Labonair Connectivity",
			"properties": {
				"labonair.sftp.ignorePatterns": {
					"type": "array",
					"default": [
						".git",
						".DS_Store",
						"node_modules",
						"Thumbs.db"
					],
					"description": "File and folder patterns to ignore during SFTP transfers",
					"items": {
						"type": "string"
					}
				},
				"labonair.sftp.initTimeout": {
					"type": "number",
					"default": 30000,
					"minimum": 5000,
					"description": "Timeout in milliseconds for SFTP subsystem initialization. Increase this for low-power devices (Raspberry Pi, NAS) or high-latency connections"
				},
				"labonair.sftp.operationTimeout": {
					"type": "number",
					"default": 30000,
					"minimum": 5000,
					"description": "Timeout in milliseconds for SFTP file operations (readdir, stat, mkdir, delete, etc.). Increase this for slow servers or high latency"
				},
				"labonair.sftp.pathExpandTimeout": {
					"type": "number",
					"default": 15000,
					"minimum": 3000,
					"description": "Timeout in milliseconds for SSH path expansion (~). Servers without OpenSSH extensions will fall back to current directory"
				},
				"labonair.files.associations": {
					"type": "object",
					"default": {
						"*.png": "internal-preview",
						"*.jpg": "internal-preview",
						"*.jpeg": "internal-preview",
						"*.gif": "internal-preview",
						"*.svg": "internal-preview",
						"*.pdf": "external",
						"*.xlsx": "external",
						"*.docx": "external",
						"*.pptx": "external",
						"*.log": "vscode",
						"*.txt": "vscode",
						"*.md": "vscode",
						"*.json": "vscode",
						"*.xml": "vscode",
						"*.yaml": "vscode",
						"*.yml": "vscode"
					},
					"description": "File extension to action mapping. Actions: 'internal-preview' (show in media panel), 'external' (open with system default app), 'vscode' (open in VS Code editor)",
					"additionalProperties": {
						"type": "string",
						"enum": [
							"internal-preview",
							"external",
							"vscode"
						]
					}
				},
				"labonair.session.autoRestore": {
					"type": "boolean",
					"default": true,
					"description": "Automatically restore Host Manager sessions (terminals and SFTP panels) on startup"
				},
				"labonair.session.maxAge": {
					"type": "number",
					"default": 2,
					"minimum": 0,
					"description": "Maximum age in days for sessions to be restored automatically (0 = no limit)"
				},
				"labonair.terminal.fontSize": {
					"type": "number",
					"default": 16,
					"minimum": 8,
					"maximum": 48,
					"description": "Default terminal font size in pixels"
				},
				"labonair.terminal.fontWeight": {
					"type": "string",
					"default": "500",
					"enum": [
						"100",
						"200",
						"300",
						"400",
						"500",
						"600",
						"700",
						"800",
						"900"
					],
					"description": "Default terminal font weight"
				},
				"labonair.terminal.lineHeight": {
					"type": "number",
					"default": 1.5,
					"minimum": 1.0,
					"maximum": 3.0,
					"description": "Default terminal line height multiplier"
				},
				"labonair.terminal.letterSpacing": {
					"type": "number",
					"default": 2,
					"minimum": 0,
					"maximum": 10,
					"description": "Default terminal letter spacing in pixels"
				},
				"labonair.terminal.cursorStyle": {
					"type": "string",
					"default": "block",
					"enum": [
						"bar",
						"block",
						"underline"
					],
					"description": "Default terminal cursor style"
				},
				"labonair.terminal.cursorBlink": {
					"type": "boolean",
					"default": true,
					"description": "Default terminal cursor blink behavior"
				},
				"labonair.terminal.pasteThreshold": {
					"type": "number",
					"default": 10,
					"minimum": 0,
					"description": "Minimum characters (with newline) to trigger paste confirmation"
				},
				"labonair.connection.readyTimeout": {
					"type": "number",
					"default": 20000,
					"minimum": 5000,
					"maximum": 120000,
					"description": "SSH connection ready timeout in milliseconds"
				},
				"labonair.connection.keepaliveInterval": {
					"type": "number",
					"default": 30000,
					"minimum": 5000,
					"maximum": 300000,
					"description": "SSH keepalive interval in milliseconds (when keepalive is enabled per host)"
				},
				"labonair.connection.maxAuthTries": {
					"type": "number",
					"default": 3,
					"minimum": 1,
					"maximum": 10,
					"description": "Default maximum authentication attempts"
				},
				"labonair.transfer.maxConcurrentPerHost": {
					"type": "number",
					"default": 3,
					"minimum": 1,
					"maximum": 20,
					"description": "Maximum concurrent transfers per host"
				},
				"labonair.transfer.maxConcurrentGlobal": {
					"type": "number",
					"default": 5,
					"minimum": 1,
					"maximum": 50,
					"description": "Maximum concurrent transfers across all hosts"
				},
				"labonair.transfer.queueProcessingInterval": {
					"type": "number",
					"default": 1000,
					"minimum": 100,
					"maximum": 10000,
					"description": "Transfer queue processing interval in milliseconds"
				},
				"labonair.transfer.cacheTTL": {
					"type": "number",
					"default": 10000,
					"minimum": 0,
					"maximum": 300000,
					"description": "Directory listing cache time-to-live in milliseconds (0 to disable)"
				},
				"labonair.transfer.paginationThreshold": {
					"type": "number",
					"default": 1000,
					"minimum": 100,
					"maximum": 50000,
					"description": "Number of files before pagination is enabled"
				},
				"labonair.fileManager.defaultLayout": {
					"type": "string",
					"default": "explorer",
					"enum": [
						"explorer",
						"commander"
					],
					"description": "Default file manager layout mode"
				},
				"labonair.fileManager.defaultView": {
					"type": "string",
					"default": "list",
					"enum": [
						"list",
						"grid"
					],
					"description": "Default file manager view mode"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/addon-search": "^0.16.0",
		"@xterm/addon-web-links": "^0.11.0",
		"@xterm/xterm": "^5.5.0",
		"adm-zip": "^0.5.10",
		"clsx": "^2.1.0",
		"iconv-lite": "^0.6.3",
		"lucide-react": "^0.300.0",
		"minimatch": "^9.0.3",
		"node-disk-info": "^1.3.0",
		"node-pty": "^1.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ssh2": "^1.15.0",
		"tar": "^6.2.0",
		"uuid": "^9.0.1",
		"zustand": "^4.4.7"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.5",
		"@types/node": "18.x",
		"@types/react": "^18.2.45",
		"@types/react-dom": "^18.2.18",
		"@types/ssh2": "^1.15.5",
		"@types/tar": "^6.1.10",
		"@types/uuid": "^9.0.7",
		"@types/vscode": "^1.85.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"copy-webpack-plugin": "^13.0.1",
		"css-loader": "^6.8.1",
		"eslint": "^8.56.0",
		"style-loader": "^3.3.3",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	}
}
