{
  "name": "terminus-vscode",
  "displayName": "Terminus - SSH Management",
  "description": "Professional SSH server management with terminal access, tunneling, and file management",
  "version": "1.0.0",
  "publisher": "snenjih",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "keywords": [
    "ssh",
    "terminal",
    "server management",
    "remote",
    "devops"
  ],
  "icon": "icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:terminus-hosts"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminus-container",
          "title": "Terminus",
          "icon": "$(vm)"
        }
      ]
    },
    "views": {
      "terminus-container": [
        {
          "id": "terminus-hosts",
          "name": "SSH Hosts"
        }
      ]
    },
    "commands": [
      {
        "command": "terminus.openHost",
        "title": "Terminus: Open Host",
        "icon": "$(vm)"
      },
      {
        "command": "terminus.addHost",
        "title": "Terminus: Add New Host",
        "icon": "$(add)"
      },
      {
        "command": "terminus.editHost",
        "title": "Terminus: Edit Host",
        "icon": "$(edit)"
      },
      {
        "command": "terminus.deleteHost",
        "title": "Terminus: Delete Host",
        "icon": "$(trash)"
      },
      {
        "command": "terminus.quickConnect",
        "title": "Terminus: Quick Connect",
        "icon": "$(plug)"
      },
      {
        "command": "terminus.refreshHosts",
        "title": "Terminus: Refresh Host List",
        "icon": "$(refresh)"
      },
      {
        "command": "terminus.duplicateHost",
        "title": "Terminus: Duplicate Host",
        "icon": "$(copy)"
      },
      {
        "command": "terminus.exportHost",
        "title": "Terminus: Export Host Config",
        "icon": "$(export)"
      },
      {
        "command": "terminus.createTunnel",
        "title": "Terminus: Create SSH Tunnel",
        "icon": "$(arrow-swap)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "terminus.openHost",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "navigation@1"
        },
        {
          "command": "terminus.editHost",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "management@1"
        },
        {
          "command": "terminus.duplicateHost",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "management@2"
        },
        {
          "command": "terminus.exportHost",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "management@3"
        },
        {
          "command": "terminus.createTunnel",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "actions@1"
        },
        {
          "command": "terminus.deleteHost",
          "when": "view == terminus-hosts && viewItem == host",
          "group": "danger@1"
        }
      ],
      "view/title": [
        {
          "command": "terminus.addHost",
          "when": "view == terminus-hosts",
          "group": "navigation@1"
        },
        {
          "command": "terminus.refreshHosts",
          "when": "view == terminus-hosts",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "terminus.quickConnect"
        },
        {
          "command": "terminus.addHost"
        },
        {
          "command": "terminus.refreshHosts"
        }
      ]
    },
    "configuration": {
      "title": "Terminus",
      "properties": {
        "terminus.backendPort": {
          "type": "number",
          "default": 30001,
          "description": "Port for the Terminus backend server"
        },
        "terminus.autoRestart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically restart backend on crash"
        },
        "terminus.maxRestarts": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of backend restart attempts"
        },
        "terminus.healthCheckInterval": {
          "type": "number",
          "default": 30000,
          "description": "Health check interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run rebuild-native && webpack --mode production",
    "watch": "webpack --mode development --watch",
    "rebuild-native": "electron-rebuild -f -w node-pty,better-sqlite3 -v ${VSCODE_ELECTRON_VERSION:-29.0.0}",
    "package": "vsce package --target win32-x64 linux-x64 darwin-x64 darwin-arm64",
    "package:single": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snenjih/terminus"
  },
  "bugs": {
    "url": "https://github.com/snenjih/terminus/issues"
  },
  "homepage": "https://github.com/snenjih/terminus#readme",
  "license": "MIT"
}
